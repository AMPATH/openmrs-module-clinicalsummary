<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="@MODULE_PACKAGE@">

	<typedef name="position" class="org.openmrs.module.clinicalsummary.db.hibernate.type.StringEnumType">
		<param name="enum">@MODULE_PACKAGE@.MappingPosition</param>
		<param name="defaultValue">Any Encounter</param>
	</typedef>

	<class name="SummaryTemplate" table="clinical_summary">
	
		<id name="templateId" type="java.lang.Integer" column="clinical_summary_id" unsaved-value="0">
			<generator class="org.openmrs.api.db.hibernate.NativeIfNotAssignedIdentityGenerator" />
		</id>
		
		<property name="name" type="java.lang.String" not-null="true" length="255" />
		
		<property name="description" type="java.lang.String" not-null="true" length="16777215" />
		
		<property name="preferred" type="java.lang.Boolean" length="1" not-null="true"/>
		
		<property name="template" type="java.lang.String" not-null="true" />
		
		<property name="xslt" type="java.lang.String" not-null="true" />
		
		<set name="encounterTypes" table="clinical_summary_mapping">
			<key column="clinical_summary_id" />
			<many-to-many class="org.openmrs.EncounterType" column="encounter_type_id"/>
		</set>
		
		<property name="position" column="position" type="position" not-null="true" />
		
		<property name="revision" column="revision" type="java.lang.Integer" not-null="true" />

		<property name="retired" type="java.lang.Boolean" column="retired" length="1" not-null="true" />
			
		<many-to-one name="creator" class="org.openmrs.User" not-null="true">
			<column name="creator" />
		</many-to-one>

		<property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19" />

		<many-to-one name="changedBy" class="org.openmrs.User">
			<column name="changed_by" />
		</many-to-one>

		<property name="dateChanged" type="java.util.Date" column="date_changed" length="19" />
		
		<property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true" />

	</class>
</hibernate-mapping>
