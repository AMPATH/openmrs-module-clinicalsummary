<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="@MODULE_PACKAGE@">

	<class name="SummaryError" table="clinical_summary_error">

		<id name="summaryErrorId" type="java.lang.Integer" column="summary_error_id" unsaved-value="0">
			<generator class="org.openmrs.api.db.hibernate.NativeIfNotAssignedIdentityGenerator" />
		</id>
		
        <many-to-one name="patient" column="patient_id"	class="org.openmrs.Patient" lazy="false"/>
		
		<property name="errorDetails" column="error_details" type="java.lang.String" not-null="true" />
			
		<many-to-one name="creator" class="org.openmrs.User" not-null="true">
			<column name="creator" />
		</many-to-one>

		<property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19" />

		<many-to-one name="changedBy" class="org.openmrs.User">
			<column name="changed_by" />
		</many-to-one>

		<property name="dateChanged" type="java.util.Date" column="date_changed" length="19" />
	</class>
</hibernate-mapping>
